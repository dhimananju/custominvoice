<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="software_contact_view_tree" model="ir.ui.view">
        <field name="name">ti_software.tree</field>
        <field name="model">software</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" string="Name"></field>
                <field name="category" string="Category"></field>
                <field name="website" string="Website"></field>
            </tree>
        </field>
    </record>
    
    

    <record id="action_software_contact" model="ir.actions.act_window">
        <field name="name">Software</field>
        <field name="res_model">software</field>
        <field name="view_mode">tree,form,search</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a software
            </p>
            
        </field>
    </record>

     

    <record id="software_contact_view_form" model="ir.ui.view">
        <field name="name">ti_software.view.form</field>
        <field name="model">software</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group name="name" >
                            <field name="name"></field>
                            <field name="category"></field>
                        </group>
                        <group name="name" >
                            <field name="website"></field>
                        </group>
                        <group name="name" >
                            <field name="description" widget="html"></field>
                        </group>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="software_contact_view_search" model="ir.ui.view">
        <field name="name">ti_software.view.search</field>
        <field name="model">software</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name"></field>
                
            </search>
        </field>
    </record>
   

</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_crm_lead_form_inherit_custom_button" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.custom.button</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
             <!-- Add the lead_properties_valid field to the form (invisible) -->
            <xpath expr="//form/sheet" position="inside">
                <field name="lead_properties_valid" invisible="1"/>
            </xpath>
        
            <xpath expr="//header" position="inside">
                <button name="request_consultant" type="object" string="Request a Consultant" 
                        class="btn-primary" attrs="{'invisible': ['|', ('company_id', 'not in', [1, 5, 6, 10]),('lead_properties_valid', '=', True)]}"
                        />
            </xpath>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="software_category_view_tree" model="ir.ui.view">
        <field name="name">software.category.tree</field>
        <field name="model">software.category</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" string="Name"></field>
            </tree>
        </field>
    </record>
    
    

    <record id="action_software_category" model="ir.actions.act_window">
        <field name="name">Category</field>
        <field name="res_model">software.category</field>
        <field name="view_mode">tree,form,search</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Category
            </p>
        </field>
    </record>

     

    <record id="software_category_view_form" model="ir.ui.view">
        <field name="name">software.category.view.form</field>
        <field name="model">software.category</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group name="name" >
                            <field name="name"></field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="software_category_view_search" model="ir.ui.view">
        <field name="name">software.category.view.search</field>
        <field name="model">software.category</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name"></field>
            </search>
        </field>
    </record>
   

</odoo>

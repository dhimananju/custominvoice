<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_crm_lead_form_inherit_custom" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.custom</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <!-- Add the custom field below the existing fields in the form -->
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="swlist" widget="many2many_tags" placeholder="Add Software"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

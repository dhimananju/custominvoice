<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_company_form_inherit_custom" model="ir.ui.view">
        <field name="name">res.company.form.inherit.custom</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <!-- Add the custom field after the company name field -->
            <xpath expr="//h1" position="after">
                <field name="swlist" widget="many2many_tags" placeholder="Add Software"/>
            </xpath>
        </field>
    </record>
</odoo>